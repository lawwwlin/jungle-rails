<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
    <label for="email">Email:</label><br>
    <%= text_field_tag :email %><br>
  </div>

  <div class="form-group">
    <label for="password">Password:</label><br>
    <%= password_field_tag :password %><br><br>
  </div>

  <%= submit_tag "Sign in" %>

<% end %>